# Challenge 1 - Timetable
'''
from multiprocessing import shared_memory


day = input("Please enter the day: ")
day = day.lower()
time = input("Please enter time in 24h format: ")
hours = int(time[0:2])

subjectMessage = "You should study "
freeMessage = "You have a free"
subjects = ["Computer Science", "English", "Maths", "Music", "Science"]
topic = "Networks"


if day == "monday":
    if hours < 12:
        print(subjectMessage + subjects[0])
    else:
        print(freeMessage)
elif day == "tuesday":
    if hours < 12:
        print(subjectMessage + subjects[2])
    else:
        print(subjectMessage + subjects[4])
elif day == "wednesday":
    if hours < 12:
        print(freeMessage)
    else:
        print(subjectMessage + subjects[1]) 
elif day == "thursday":
    print(subjectMessage + subjects[0] + " focusing on Networks!")
elif day == "friday":
    if hours < 12:
        print(subjectMessage + subjects[3])
    else:
        print(freeMessage)
else:
    print("Invalid day")


# Challenge 1 with match
match day:
    case "monday":
        if hours < 12:
            print(subjectMessage + subjects[0])
        else:
            print(freeMessage)
    case "tuesday":
        if hours < 12:
            print(subjectMessage + subjects[2])
        else:
            print(subjectMessage + subjects[4])
    case "wednesday":
        if hours < 12:
            print(freeMessage)
        else:
            print(subjectMessage + subjects[1]) 
    case "thursday":
        print(subjectMessage + subjects[0] + " focusing on " + topic + ".")
    case "friday":
        if hours < 12:
            print(subjectMessage + subjects[3])
        else:
            print(freeMessage)
    case other:
        print("Invalid day")
'''
