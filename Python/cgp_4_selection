                    1. Alesund Vigra (AES)
                    2. Shanghai Hongqiao (SHA)
                    3. Bucharest Otopeni (OTP)
                    4. Toulouse (TLS)
                    5. None of these
                    """ ))

ticket_type = int(input("1. First 2. Standard"))

match destination:
    case 1:
        distance = aes_distance
        if ticket_type == 1:
            price = aes_first
        else:
            price = aes_standard
    case 2:
        distance = sha_distance
        if ticket_type == 1:
            price = sha_first
        else:
            price = sha_standard
    case 3:
        distance = otp_distance
        if ticket_type == 1:
            price = otp_first
        else:
            price = otp_standard
    case 4:
        distance = tls_distance
        if ticket_type == 1:
            price = tls_first
        else:
            price = tls_standard
    case 5:
        distance = float(input("Please enter the distance in KM: "))
        price = float(input("Enter the price: £"))

if price == -1:
    print("Ticket not valid")
else: 
    if distance <= 1000:
        if ticket_type == 1:
            price = price * 0.9
        else:
            price = price * 0.925
    else:
        if ticket_type == 1:
            price = price * 0.7
        else:
            price = price * 0.85
    print("Price with discounts: £" + str(round(price, 2)))
