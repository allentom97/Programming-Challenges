# Challenge 2 - Airline sale

from subprocess import check_output


aes_distance = 700
aes_first = -1
aes_standard = 106
sha_distance = 5700
sha_first = 2200
sha_standard = 1000
otp_distance = 1400
otp_first = 190
otp_standard = 95
tls_distance = 690
tls_first = 210
tls_standard = 115

